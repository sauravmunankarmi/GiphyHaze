<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="32dp"
    app:cardElevation="1dp"
    android:clipToPadding="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_giphy_gif"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="32dp"
        android:clipToPadding="false"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_giphy_gif"
            android:layout_width="250dp"
            android:layout_height="250dp"
            app:cardCornerRadius="32dp"
            app:cardElevation="1dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/iv_giphy_gif"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

        </androidx.cardview.widget.CardView>


        <Button
            android:id="@+id/bt_giphy_gif_fav_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/cv_giphy_gif"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp"
            android:padding="12dp"
            android:text="Add to favorites"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:drawableEnd="@drawable/ic_baseline_favorite_24"
            android:drawableTint="@color/white"
            android:backgroundTint="@color/light_pink"
            android:drawablePadding="8dp"
            android:background="@drawable/button_layout"
            />




    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>